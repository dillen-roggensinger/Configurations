[branch]
	autosetuprebase = always
[pull]
	rebase = true
[core]
	autocrlf = input
	editor = vim
	longpaths = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	acm = !git add -A && git commit -m
	bls = for-each-ref --sort=-committerdate refs/heads/ --color --format='%(color:red)%(refname) %(color:blue)%(committerdate) %(color:green)%(authorname)'
	cb = checkout -b
	cm = commit -m
	co = checkout
	cp = cherry-pick
	fo = fetch origin
	fp = push --force
	ls = log --color --graph --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	mt = mergetool
	po = push -u origin
	pruneall = gc --prune=now
	rbc = rebase --continue
	rbm = !git fetch origin main && git rebase -i origin/main
	st = status
[merge]
	tool = kdiff3
